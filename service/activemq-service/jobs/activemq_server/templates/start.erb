  mkdir $DATA_DIR
  sudo chown -R vcap:vcap $DATA_DIR
  sudo chmod 700 $DATA_DIR
  sudo -u vcap $BINARY_DIR/pg_ctl initdb -D $DATA_DIR -o "--auth=trust"
